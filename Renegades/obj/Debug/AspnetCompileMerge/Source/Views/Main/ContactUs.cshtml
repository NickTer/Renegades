@model Renegades.Models.ContactMessage

@{
    ViewBag.Title = "ContactUs";
}
<div id="content_block">
    <h1>Contact Us</h1>
   
    <div class="text_block left_sidec">
        
        @if (@Model.Name!=null)
        {
            <div style="background-color: #121212;padding: 5px;margin-top:10px;margin-right:15px;margin-left: 10px;">
                <h3>Thank You</h3>
                <p>Thank you, @Model.LastName @Model.Name, for sending your message! </p>
                <p>@Html.ActionLink("Go to contact form","ContactUs")</p>
            </div>
        }
        else
        {
            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <ul id="form_items">
                    <li class="editor-label">
                        @Html.LabelFor(model => model.Name)
                    </li>
                    <li class="editor-field">
                        @Html.TextBoxFor(model => model.Name, new {@class = "inp large_inp"})
                        @Html.ValidationMessageFor(model => model.Name)
                    </li>

                    <li class="editor-label">
                        @Html.LabelFor(model => model.LastName)
                    </li>
                    <li class="editor-field">
                        @Html.TextBoxFor(model => model.LastName, new {@class = "inp large_inp"})
                        @Html.ValidationMessageFor(model => model.LastName)
                    </li>

                    <li class="editor-label">
                        @Html.LabelFor(model => model.Email)
                    </li>
                    <li class="editor-field">
                        @Html.TextBoxFor(model => model.Email, new {@class = "inp large_inp"})
                        @Html.ValidationMessageFor(model => model.Email)
                    </li>

                    <li class="editor-label">
                        @Html.LabelFor(model => model.Phone)
                    </li>
                    <li class="editor-field">
                        @Html.TextBoxFor(model => model.Phone, new {@class = "inp large_inp"})
                        @Html.ValidationMessageFor(model => model.Phone)
                    </li>

                    <li class="editor-label">
                        @Html.LabelFor(model => model.Subject)
                    </li>
                    <li class="editor-field">
                        @Html.TextBoxFor(model => model.Subject, new {@class = "inp large_inp"})
                        @Html.ValidationMessageFor(model => model.Subject)
                    </li>

                    <li class="editor-label">
                        @Html.LabelFor(model => model.Message)
                    </li>
                    <li class="editor-field">
                        @Html.TextAreaFor(model => model.Message, new {@class = "inp_arrea"})
                        @Html.ValidationMessageFor(model => model.Message)
                    </li>

                    <li>
                        <input type="submit" value="Send Message" class="submit_btn"/>
                    </li>
                </ul>
            }
        }
    </div>
